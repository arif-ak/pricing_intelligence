{% extends 'base.html.twig' %}

{% block title %}Brands index{% endblock %}

{% block body %}
    <h1>Brands index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand Name</th>
                <th>Brand Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.brandName }}</td>
                <td>{{ brand.brandUrl }}</td>
                <td>
                    <a href="{{ path('brands_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('brands_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('brands_new') }}"> + Create new</a>
{% endblock %}
