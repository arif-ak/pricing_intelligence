{% extends 'base.html.twig' %}

{% block title %}Website Listing{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Websites</h1>
        </div>
        <div class="col">
            <a class="btn btn-primary float-right pull-right mt-1" href="{{ path('website_new') }}">Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Website Name</th>
                <th>Website url(click to visit site)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for website in websites %}
            <tr>
                <td> <a href="{{ path('website_show', {'id': website.id}) }}">{{ website.websiteName }}</a></td>
                <td><a href="{{ website.websiteUrl }}">{{ website.websiteUrl }}</a></td>
                <td>
                    <a class="btn btn-primary" href="{{ path('website_show', {'id': website.id}) }}">Show</a>
                    <a class="btn btn-primary" href="{{ path('website_edit', {'id': website.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
