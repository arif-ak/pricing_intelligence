{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>ProductName</th>
                <td>{{ product.productName }}</td>
            </tr>
            <tr>
                <th>ProductUrl</th>
                <td>{{ product.productUrl }}</td>
            </tr>
            <tr>
                <th>ProductPrice</th>
                <td>{{ product.productPrice }}</td>
            </tr>
            <tr>
                <th>ProductMrp</th>
                <td>{{ product.productMrp }}</td>
            </tr>
            <tr>
                <th>ProductDiscount</th>
                <td>{{ product.productDiscount }}</td>
            </tr>
            <tr>
                <th>PackingQuantity</th>
                <td>{{ product.packingQuantity }}</td>
            </tr>
            <tr>
                <th>Moq</th>
                <td>{{ product.moq }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ product.brand }}</td>
            </tr>
            <tr>
                <th>ProductImageUrl</th>
                <td>{{ product.productImageUrl }}</td>
            </tr>
            <tr>
                <th>SimilarProductsLink</th>
                <td>{{ product.similarProductsLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
